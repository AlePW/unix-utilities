#!/usr/bin/env ruby

def open_bin
  case RUBY_PLATFORM
  when /linux/
    'xdg-open'
  when /darwin/
    'open'
  else
    'open'
  end
end

def run_open(path, open_args)
  path = path.strip
  return if path.empty?
  system open_bin, *open_args, path
end

open_args = []

if ARGV.include?("--")
  while arg = ARGV.shift
    break if arg == "--"
    open_args << arg
  end
else
  while ARGV[0] =~ /\A-/
    open_args << ARGV.shift
  end
end

if ARGV.empty?
  STDIN.each do |line|
    run_open path, open_args
  end
else
  ARGV.each do |path|
    run_open path, open_args
  end
end
